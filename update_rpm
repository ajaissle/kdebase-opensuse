#! /bin/sh

opwd=$PWD
tdir=`mktemp -d`
cd $tdir || exit 1
git clone git://git.opensuse.org/projects/desktop/kdebase4-openSUSE.git
rm -rf kdebase4-openSUSE/.git
svn export https://svn.kde.org/home/kde/trunk/playground/base/kio_sysinfo kdebase4-openSUSE/sysinfo/kio_sysinfo
if test -d "$MY_LCN_CHECKOUT"; then
  echo "Updating $MY_LCN_CHECKOUT"
  svn up $MY_LCN_CHECKOUT
else
  echo "No \$MY_LCN_CHECKOUT set, will checkout temporarly"
  svn export https://forgesvn1.novell.com/svn/suse-i18n/trunk/lcn
  export MY_LCN_CHECKOUT=$PWD/lcn
fi
pushd kdebase4-openSUSE/po
./fill_po.sh
popd

# remove non-released stuff
for f in update_rpm totranslate/*.sh; do
    rm kdebase4-openSUSE/$f
done

tar -cvj -f $opwd/kdebase4-openSUSE-11.2.tar.bz2 kdebase4-openSUSE
cd /
rm -rf $tdir
